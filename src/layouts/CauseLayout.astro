---
import MainLayout from "./MainLayout.astro";
import Button from "../components/Button.astro";
import { Image } from 'astro:assets';
import myImage2 from "../assets/images/hjerte.svg";
const {frontmatter} = Astro.props;
---
<MainLayout title="Titel">
    <div class="lg:grid lg:grid-cols-2">
        <img src={frontmatter.coverimage} alt={frontmatter.coveralt} class="w-full h-[287px] lg:h-[914px] object-cover"/>
        <section class="mx-4 sm:mx-[32px] md:mx-[48px] lg:mx-[80px] mt-3 sm:mt-[19px] md:mt-[26px] lg:mt-10 mb-6 sm:mb-[33px] md:mb-[42px] lg:mb-[60px]">
                <Button variant="tertiary">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-5 lg:w-6">
                        <path fill-rule="evenodd" d="M9.78 4.22a.75.75 0 0 1 0 1.06L7.06 8l2.72 2.72a.75.75 0 1 1-1.06 1.06L5.47 8.53a.75.75 0 0 1 0-1.06l3.25-3.25a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd" />
                    </svg>
                    <p><a href="/kategorier">Back</a></p>
                </Button>
            <div class="text-black-400 flex justify-between mt-5 lg:mt-10 mb-4 lg:mb-5">
                <p class="text-xs lg:text-base">{frontmatter.date}</p>
                <p class="text-xs lg:text-base">{frontmatter.type}</p>
            </div>
            <h1 class="mb-6 lg:mb-[60px]">{frontmatter.title}</h1>
            <p class="mb-3 lg:mb-6">{frontmatter.description}</p>
            <slot />
            <div class="flex justify-center gap-[60px] lg:gap-[100px] mt-6 mb-10 lg:mt-[60px] lg:mb-20">
                <div class="justify-items-center">
                    <p class="font-semibold">{frontmatter.amount}</p>
                    <p class="text-xs lg:text-base">{frontmatter.amountgoal}</p>
                </div>
                <div class="justify-items-center">
                    <p class="font-semibold">{frontmatter.donors}</p>
                    <p class="text-xs lg:text-base">Donors</p>
                </div>
                <div class="justify-items-center">
                    <p class="font-semibold">{frontmatter.time}</p>
                    <p class="text-xs lg:text-base">{frontmatter.status}</p>
                </div>
            </div>
            <div class="grid justify-items-center">
                <Button variant="cta">
                    <p>Donate</p>
                    <Image src={myImage2} class="w-[13.33px] h-[12.23px] lg:w-[20px] lg:h-[18.35px]" alt=""></Image>
                </Button>
            </div>
        </section>
    </div>
</MainLayout>
