---
import MainLayout from "./MainLayout.astro";
import Button from "../components/Button.astro";
import { Image } from 'astro:assets';
import myImage2 from "../assets/images/hjerte.svg";
const {frontmatter} = Astro.props;
---
<MainLayout title="Titel">
    <img src={frontmatter.coverimage} alt={frontmatter.coveralt} class="w-full h-[287px] lg:h-[914px] object-cover"/>
    <section class="mx-4 mt-3 mb-6">
        <Button variant="tertiary">Back</Button>
        <div class="text-black-400 flex justify-between mt-5 mb-4">
            <p>{frontmatter.date}</p>
            <p>{frontmatter.type}</p>
        </div>
        <h1 class="mb-6">{frontmatter.title}</h1>
        <p class="mb-3 lg:mb-6">{frontmatter.description}</p>
        <slot />
        <div class="flex justify-center gap-[60px] mt-6">
            <p>{frontmatter.amount}</p>
            <p>{frontmatter.amountgoal}</p>
        </div>
        <div class="grid justify-items-center">
            <Button variant="cta">
                <p>Donate</p>
                <Image src={myImage2} class="w-[13.33px] h-[12.23px] lg:w-[20px] lg:h-[18.35px]" alt=""></Image>
            </Button>
        </div>
    </section>
</MainLayout>
