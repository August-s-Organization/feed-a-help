---
import MainLayout from "./MainLayout.astro";
import IndexHeader from "../components/IndexHeader.astro";
import MainHeader2 from "../components/MainHeader2.astro";
import MainHeader from "../components/MainHeader.astro";
import Button from "../components/Button.astro";
import { Image } from 'astro:assets';
import myImage2 from "../assets/images/hjerte.svg";
const {frontmatter} = Astro.props;
---

<MainLayout title="donations formÃ¥l">
    <MainHeader2></MainHeader2>

<section class=" md:flex md:flex-row md:items-center md:justify-between">
    <article>
    <img src={frontmatter.coverimage} alt={frontmatter.coveralt} class="w-[655px] h-[287px] md:h-[914px] md:w-[855px] object-cover "/>
</article>

<article class=" flex flex-col items-center md:h-[771px] md:w-[857px] mx-4 md:mx-20 md:mt-0 mb-6 md:mb-6 bg-contain bg-no-repeat bg-[url('/src/assets/images/Grafik/love.svg')]">
   
    <div class=" mt-3 md:mt-[26px] md:w-[700px]">
        <Button variant="tertiary">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-5 lg:w-6">
                <path fill-rule="evenodd" d="M9.78 4.22a.75.75 0 0 1 0 1.06L7.06 8l2.72 2.72a.75.75 0 1 1-1.06 1.06L5.47 8.53a.75.75 0 0 1 0-1.06l3.25-3.25a.75.75 0 0 1 1.06 0Z" clip-rule="evenodd" />
            </svg>
            <p><a href="/kategorier">Back</a></p>
        </Button>
    <div class="text-black-400 flex justify-between mt-5 md:mt-10 mb-4 md:mb-5">
        <p class="text-xs lg:text-base">{frontmatter.date}</p>
        <p class="text-xs lg:text-base">{frontmatter.type}</p>
    </div>
    <h1 class="mb-6 md:mb-[60px]">{frontmatter.title}</h1>
    <p class="mb-3 md:mb-6">{frontmatter.description}</p>
    <slot />
    <div class="flex justify-center gap-[60px] md:gap-[100px] mt-6 mb-10 md:mt-[60px] md:mb-20">
        <div class="flex flex-col items-center gap-1">
            <p class="font-semibold">{frontmatter.amount}</p>
            <p class="text-xs lg:text-base">{frontmatter.amountgoal}</p>
        </div>
        <div class="flex flex-col items-center gap-1">
            <p class="font-semibold">{frontmatter.donors}</p>
            <p class="text-xs lg:text-base">Donors</p>
        </div>
        <div class="flex flex-col items-center gap-1">
            <p class="font-semibold">{frontmatter.time}</p>
            <p class="text-xs lg:text-base">{frontmatter.status}</p>
        </div>
    </div>
    <div class="flex flex-col items-center gap-1">
        <Button variant="cta">
            <p>Donate now</p>
            <Image src={myImage2} class="w-[13.33px] h-[12.23px] md:w-[20px] md:h-[18.35px]" alt=""></Image>
        </Button>
    </div>
</div>
</section>
<section>
<div class="flex justify-center">
    <iframe src={frontmatter.map} style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade" class="w-full h-[200px] sm:h-[265.5px] md:h-[331px] lg:h-[462px]"></iframe>
</div>
</div>
</article>
</section>
</MainLayout>

