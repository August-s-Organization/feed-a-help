---
import Button from "./Button.astro";
const { size } = Astro.props;
const cardStyling = "bg-yellow-200 hover:bg-yellow-100 active:bg-yellow-300 rounded-lg flex-none";
const sizeClasses = {
    "small": "w-[160px] lg:w-[340px]",
    "large": "w-[340px] lg:w-[420px]",
};
const causes = await Astro.glob('../pages/causes/*.md');
const sorteredecauses = causes.sort((a, b) => Date.parse(b.frontmatter.date) - Date.parse(a.frontmatter.date));
const udvalgtecauses = sorteredecauses.slice(0, 10);
---
{udvalgtecauses.map(post =>
<div class:list={[cardStyling, sizeClasses[size]]}>
    <img src={post.frontmatter.coverimage} alt={post.frontmatter.coveralt} class="object-cover h-[116px] lg:h-[145px] w-full rounded-t-lg">
    <div class="px-3 py-2 lg:py-3">
        <h4 class="text-red-700 mb-1 lg:mb-3"><a href={post.url}>{post.frontmatter.title}</a></h4>
        <p class="mb-2 lg:mb-6">{post.frontmatter.description}</p>
        <Button variant="tertiary" class="mb-2 lg:mb-6"><p class="text-xs md:text-sm lg:text-base"><a href={post.url}>Read more</a></p>
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-5 h-5 md:w-6 md:h-6">
                <path fill-rule="evenodd" d="M6.22 4.22a.75.75 0 0 1 1.06 0l3.25 3.25a.75.75 0 0 1 0 1.06l-3.25 3.25a.75.75 0 0 1-1.06-1.06L8.94 8 6.22 5.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
                </svg>
                </Button>
                </div>
                </div>
                )}