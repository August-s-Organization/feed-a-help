---
const { variant } = Astro.props;
const buttonStyling = "rounded-lg";
const variantClasses = {
"primary": "bg-yellow-500 hover:bg-black-200 active:bg-black-100 text-yellow-800 hover:text-white-cream active:text-white-cream px-4 py-3 md:px-5 md:py-4",
"secondary": "outline outline-black-500 hover:bg-black-500 text-black-500 hover:text-white-white active:text-white-white text-sm md:text-base font-medium px-4 py-3 md:px-5 md:py-4",
"tertiary": "text-yellow-800 font-medium hover:font-bold px-4 py-3 md:px-5 md:py-4",
"cta": "bg-yellow-500 hover:bg-yellow-300 text-yellow-800 text-xl md:text-2xl font-extrabold px-4 py-3 md:px-5 md:py-4",
"menu": "text-red-800 font-normal hover:font-bold p-3",
};
---
<div>
    <button class:list={[buttonStyling, variantClasses[variant]]}><slot /></button>
</div>