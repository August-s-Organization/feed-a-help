---
import MainLayout from "../layouts/MainLayout.astro";
import Header from "../components/Header.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import { Image } from 'astro:assets';
import myImage from "../assets/images/hero-unit.jpg";
import myImage2 from "../assets/images/grafik/profil.svg";
import myImage3 from "../assets/images/grafik/blue_hands.svg";
import myImage4 from "../assets/images/grafik/letter.svg";
import myImage5 from "../assets/images/grafik/yellow_hands.svg"
import myImage6 from "../assets/images/gorkha-nepal.jpg";
import myImage7 from "../assets/images/leogane-haiti.jpg";
import myImage8 from "../assets/images/turkana-county-kenya.jpg";
import myImage9 from "../assets/images/dhaka-bangladesh.jpg";
import myImage10 from "../assets/images/aleppo-syria.jpg";
import myImage11 from "../assets/images/juba-south-sudan.jpg";
import myImage12 from "../assets/images/tete-mozambique.jpg";
import myImage13 from "../assets/images/niamey-niger.jpg";
import myImage14 from "../assets/images/uttar-pradesh-india.jpg";
import myImage15 from "../assets/images/kathmandu-nepal.jpg";
---
<header class="text-black-500">
    <section class="relative">
        <div class="absolute w-full z-10">
            <Header></Header>
        </div>
        <Image src={myImage} alt="A woman farming in Turkana County, Kenya." class="h-[28rem] md:h-[36rem] w-full object-cover"></Image>
        <div class="absolute bottom-7 left-7 md:bottom-12 md:left-12 lg:bottom-20 lg:left-20">
            <Button variant="cta">
                <p>Donate</p>
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-5 h-5 lg:w-6 lg:h-6">
                    <path d="M2 6.342a3.375 3.375 0 0 1 6-2.088 3.375 3.375 0 0 1 5.997 2.26c-.063 2.134-1.618 3.76-2.955 4.784a14.437 14.437 0 0 1-2.676 1.61c-.02.01-.038.017-.05.022l-.014.006-.004.002h-.002a.75.75 0 0 1-.592.001h-.002l-.004-.003-.015-.006a5.528 5.528 0 0 1-.232-.107 14.395 14.395 0 0 1-2.535-1.557C3.564 10.22 1.999 8.558 1.999 6.38L2 6.342Z" />
                </svg>
            </Button>
        </div>
    </section>
    <section class="bg-blue-200 px-4 pt-8 pb-10 lg:px-20 lg:pt-10 lg:pb-12">
        <article class="grid justify-items-center">
            <h2 class="mb-6 lg:mb-10">How does Feed A Help work?</h2>
            <div class="grid grid-cols-3 gap-5 text-sm lg:text-base text-center">
                <div class="place-items-center">
                    <Image src={myImage2} alt="" class="h-14 md:h-20 lg:h-24 mb-2 md:mb-4"></Image>
                    <p class="w-[114px] lg:w-[178px]">Create a profile as a donor or receiver</p>
                </div>
                <div class="place-items-center">
                    <Image src={myImage3} alt="" class="h-14 md:h-20 lg:h-24 mb-2 md:mb-4"></Image>
                    <p class="w-[85px] lg:w-[168px]">Set up your donation or cause</p>
                </div>
                <div class="place-items-center">
                    <Image src={myImage4} alt="" class="h-14 md:h-20 lg:h-24 mb-2 md:mb-4"></Image>
                    <p class="w-[80px] lg:w-[150px]">And share the impact together</p>
                </div>
            </div>
        </article>
    </section>
</header>
<MainLayout title="Forside">
    <section class="pl-4 py-6 lg:py-10 cursor-grab">
        <div class="grid justify-items-center">
            <h2 class="mb-6 lg:mb-10">Causes</h2>
            <p class="mb-6 lg:mb-20">Explore our variety of categories and validated causes.</p>
            <div class="flex justify-self-end mb-1 lg:mb-5">
                <Button variant="tertiary" class="flex self-end">
                    <p class="text-yellow-800">See all</p>
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 16 16" fill="currentColor" class="w-5 h-5 lg:w-6 lg:h-6">
                        <path fill-rule="evenodd" d="M6.22 4.22a.75.75 0 0 1 1.06 0l3.25 3.25a.75.75 0 0 1 0 1.06l-3.25 3.25a.75.75 0 0 1-1.06-1.06L8.94 8 6.22 5.28a.75.75 0 0 1 0-1.06Z" clip-rule="evenodd" />
                    </svg>
                </Button>
            </div>
        </div>
        <article class="flex flex-row gap-2 lg:gap-4 py-[10px] overflow-x-auto">
            <Card size="small" heading="Gorkha, Nepal" description="Humanitarian Aid">
                <Image src={myImage6} alt="" class="object-cover h-20 lg:h-40 rounded-t-lg"></Image>
            </Card>
            <Card size="small" heading="Aleppo, Syria" description="Refugees">
                <Image src={myImage10} alt="" class="object-cover h-20 lg:h-40 rounded-t-lg"></Image>
            </Card>
            <Card size="small" heading="Tete, Mozambique" description="Development">
                <Image src={myImage12} alt="" class="object-cover h-20 lg:h-40 rounded-t-lg"></Image>
            </Card>
            <Card size="small" heading="Turkana, Kenya" description="Climate">
                <Image src={myImage8} alt="" class="object-cover h-20 lg:h-40 rounded-t-lg"></Image>
            </Card>
            <Card size="small" heading="Uttar Pradesh, India" description="Education">
                <Image src={myImage14} alt="" class="object-cover h-20 lg:h-40 rounded-t-lg"></Image>
            </Card>
            <Card size="small" heading="Leogane, Haiti" description="Humanitarian Aid">
                <Image src={myImage7} alt="" class="object-cover h-20 lg:h-40 rounded-t-lg"></Image>
            </Card>
            <Card size="small" heading="Juba, South Sudan" description="Refugees">
                <Image src={myImage11} alt="" class="object-cover h-20 lg:h-40 rounded-t-lg"></Image>
            </Card>
            <Card size="small" heading="Niamey, Niger" description="Development">
                <Image src={myImage13} alt="" class="object-cover h-20 lg:h-40 rounded-t-lg"></Image>
            </Card>
            <Card size="small" heading="Dhaka, Bangladesh" description="Climate">
                <Image src={myImage9} alt="" class="object-cover h-20 lg:h-40 rounded-t-lg"></Image>
            </Card>
            <Card size="small" heading="Kathmandu, Nepal" description="Education">
                <Image src={myImage15} alt="" class="object-cover h-20 lg:h-40 rounded-t-lg"></Image>
            </Card>
        </article>
    </section>
</MainLayout>